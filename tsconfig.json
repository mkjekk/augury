{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "target": "es5",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
